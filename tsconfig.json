{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"paths": {
			"@components/*": [ "./src/components/*" ],
			"@fonts": [ "./src/font/font.ts" ],
			"@lib/*": [ "./src/lib/*" ],
			"@utils/*": [ "./src/utils/*" ],
			"@types/*": [ "./src/types/*" ],
			"@*": [ "./src/*" ],
		}
	},
	"include": ["next-env.d.ts", "src/types/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
